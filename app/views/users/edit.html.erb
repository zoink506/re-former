<h1>Edit User</h1>

<%= form_with model: @user do |f| %>
  <%= f.label(:username, "Your New Username: ") %>
  <%= f.text_field(:username, placeholder: "cool username bro") %>

  <%= f.label(:email, "Your New Email: ") %>
  <%= f.email_field(:email, placeholder: "cool email bro") %>

  <%= f.label(:password, "Your New Password: ") %>
  <%= f.password_field(:password, placeholder: "cool password bro") %>

  <%= f.submit %>
<% end %>